extends layout

block content
  h1= title 
  br
  - var results = [{flavour: "vanilla",price: 7.8,toppings:"hot fudge"},{flavour: "strawberry",price: 10.0,toppings:"caramel"},{flavour: "chocolate",price: 8.9,toppings:"oreo"}];
   div(class = "container-fluid")
    div(class = "row")
     each form in results
        div(class="col-sm-4") flavour: #{form.flavour} 
        br
        br 
        div(class="col-sm-4") price: #{form.price}
        br
        br  
        div(class="col-sm-4") toppings: #{form.toppings}